<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CommitMain" 
    android:background="@drawable/comanback" >

  	 <LinearLayout
  	     android:id="@+id/cdetails"
  	     android:layout_width="260dp"
  	     android:layout_height="300dp"
  	     android:layout_alignParentTop="true"
  	     android:layout_centerHorizontal="true"
  	     android:layout_marginTop="71dp"
  	     android:background="@drawable/cback"
  	     android:orientation="vertical" >
    
	    <Button
	        android:id="@+id/go_back" 
	        android:layout_width="245dp"
	        android:layout_height="30dp"
	        android:text="@string/back"
	        android:textColor="#000000"
	        android:textSize="15sp"
	        android:background="@drawable/back_button"/>
	    
	    <TextView
	          android:id="@+id/forgot"
	          android:layout_width="200dp"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="25dp"
	          android:layout_marginLeft="25dp"
	          android:text="@string/forgot_text"
	          android:textColor="#000000"
	          android:textSize="15sp" />
	    <Button
	        android:id="@+id/addcheck" 
	        android:layout_width="200dp"
	        android:layout_height="30dp"
	        android:text="@string/add_check"
	        android:textColor="#FFFFFF"
	        android:textSize="15sp"
	        android:layout_marginTop="50dp"
	        android:layout_marginLeft="25dp"
	        android:background="@drawable/button_orange"/>
	    
	    <Button
	        android:id="@+id/delete" 
	        android:layout_width="200dp"
	        android:layout_height="30dp"
	        android:text="@string/delete_commitment"
	        android:textColor="#000000"
	        android:textSize="15sp"
	        android:layout_marginTop="60dp"
	        android:layout_marginLeft="25dp"
	        android:background="@drawable/button_grey"/>
    

	</LinearLayout>
</RelativeLayout>