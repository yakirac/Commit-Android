<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CommitMain" 
    android:background="@drawable/comanback">
    
  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="300dp"
      android:layout_alignParentTop="true"
  	  android:layout_centerHorizontal="true"
  	  android:layout_marginTop="91dp"
      android:background="@drawable/cback"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/iw"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:paddingTop="10dp"
          android:text="@string/i_will"
          android:textColor="#b04b0c"
          android:textSize="24sp" />

      <EditText
          android:id="@+id/ct"
          android:layout_width="210dp"
          android:layout_height="40dp"
          android:layout_marginLeft="18dp"
          android:background="@drawable/textfield1"
          android:inputType="textMultiLine"
          android:maxLines="3" />

      <TextView
          android:id="@+id/ed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:paddingTop="10dp"
          android:text="@string/every_day"
          android:textColor="#b04b0c"
          android:textSize="24sp" />

      <LinearLayout
          android:layout_width="230dp"
          android:layout_height="60dp"
          android:paddingLeft="20dp"
          android:paddingTop="30dp" >

          <TextView
              android:id="@+id/rm"
              android:layout_width="100dp"
              android:layout_height="20dp"
              android:text="@string/remind_me" />

          <TextView
              android:id="@+id/rt"
              android:layout_width="106dp"
              android:layout_height="20dp"
              android:background="@drawable/textfield1"
              android:text="@string/default_reminder_time" />
      </LinearLayout>

      <TextView
          android:id="@+id/fgt"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:text="@string/forget" />
  </LinearLayout>
    
  	 <ImageView
  	     	 android:id="@+id/commitButton"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:scaleType="centerInside"
             android:layout_marginLeft="130dp"
             android:layout_marginTop="320dp"
             android:src="@drawable/commit"
             android:contentDescription="@string/commit"
             />

</RelativeLayout>

